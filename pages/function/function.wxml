        </view> 
        <view class="fct right">
          <navigator url="../ringsize/ringsize">
            <image src="/images/ring.png"></image>
            <view>戒指尺码</view>
          </navigator>
        </view> 
      </view>
    </swiper-item> 

    <swiper-item>  
      <view class="part">
        <view class="fct left">
          <navigator url="../bmi/bmi">
            <image src="/images/weight.png"></image>
            <view>体重BMI</view>
          </navigator>
        </view> 
        <view class="fct right">
          <navigator url="../bmr/bmr">
            <image src="/images/people.png"></image>
            <view>基础代谢率</view>
          </navigator>
