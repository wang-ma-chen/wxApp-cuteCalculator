/* pages/shoe/shoe.wxss */
page{
  height: 100%;
  width: 100%;
  background-color: #eee;
  font-size: 30rpx;
}

.container{
  height: 100%;
}

.page__hd{
    height:10%;
    width: 100%;
    text-align: center;
}

.page_body{
  display: flex;
  flex-direction: column;
  height:90%;
  width: 100%;
}

.page__title{
    display: inline-block;
    padding: 30rpx 60rpx 10rpx 60rpx;
    font-size: 30rpx;
    color: #777777;
    border-bottom: 1px solid  #777777;
}

.section__title{
    background-color:#569597; 
    color:white;
    text-align: center;
    border-radius: 3px;
    margin: 15rpx 10rpx 15rpx 10rpx;
    padding: 5rpx 30rpx 5rpx 30rpx;
} 

image{
  float: right;
  height: 20px;
  width: 20px;
}
.input{
  border-radius: 3px;
  margin: 0 10rpx 0 10rpx;
  padding: 20rpx;
  background-color: white;
  box-shadow: 4rpx 4rpx 4rpx #ccc;
}

.result_pannel{
  margin: 15rpx 0 5rpx 0;
  align-items: center;
  display:flex;
  justify-content: space-around;
}

.result{
  width:46%;
  border-radius: 3px;
  margin: 15rpx 2rpx 5rpx 2rpx;
  padding: 26rpx;
  background-color: white;
  box-shadow: 4rpx 4rpx 4rpx #ccc;
}

.wtf{
  display: inline-block;
  position: absolute;
  bottom: 200rpx;
  width: 40%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 6rpx;
  box-sizing: border-box;
}
.left{
  left:5%;
  box-shadow: 4rpx 4rpx 4rpx #ccc;
  background-color:white; 
}
.right{
  right:5%;
   color: white;
  background-color:#569597; 
}